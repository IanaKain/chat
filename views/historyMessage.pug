for item in messages || []
  div(id=item._id class=`chat-message-block__message ${item.role}`)
    .message__user-info
      .message__user-name= item.username
        .message__date= item.updateTime ? `Updated ${item.updateTime}` : item.createTime
    if item.imgSrc
      .message__user-img
        img(src=`${item.imgSrc}`)
    else
      .message__user-content= item.text
    if item.role === 'owner'
      .message__user-actions
        if !item.imgSrc
          button.edit-message-btn(type='button', onclick="editMessage('" + item._id + "')")
            i.fa.fa-pencil-square-o
        button.delete-message-btn(type='button', onclick="deleteMessage('" + item._id + "')")
          i.fa.fa-trash-o
