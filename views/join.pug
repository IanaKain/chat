extends layout

block content
  .container-page__login-page
    .container-page__content
      .container-page__form
        .header-block
          a.link(href='/login') Log in
          h1= title
        form#join-form(
          action='/join'
          method='post'
        )
          .form-item
            label(for='name') Nickname:
            input#name(
              required
              type='text'
              name='username'
              placeholder='Enter your nickname...'
            )
          .form-item
            label(for='password') Password:
            input#password(
              required
              type='password'
              name='password'
              placeholder='Enter your password...'
            )
          .form-item
            label(for='room') Select your room:
            select#room(name='room')
              option(value='javascript') JavaScript
              option(value='nodejs') NodeJS
              option(value='python') Python
          if error
            .error
              p.error-message= error
          .form-item.form-button
            input#submit(
              type='submit'
              value='Join'
            )
